<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <title>Document</title>
    <link rel="stylesheet" href="stylesheets/app.css"
</head>
<body>
    <div class="signin">

  <form action="/reg" method="post" autocomplete="off">

    <div class="group head">

      <h2>Hello There,</h2>

      

    </div>

    <div class="group">

    <input type="text" name="user" id="username-field" name="user" placeholder="USERNAME" required>

    </div>

    <div class="group">

    <input type="email" name="email" id="email-field" name="email" placeholder="EMAIL" required>

    </div>

     <div class="group">

    <input type="tel" name="phone" id="phone-field" name="phone" placeholder="PHONE NO" required>

    </div>

    <div class="group">


    <input type="password" name="pass" id="password-field" name="pass" placeholder="PASSWORD" required>

    <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>

    </div>

    <div class="group">

      <button type="submit"><span>Register</span></button>
    </div>


  </form>

</div>
</body>
<script>
    $(".toggle-password").click(function () {
  $(this).toggleClass("fa-eye fa-eye-slash");

  var input = $($(this).attr("toggle"));

  if (input.attr("type") == "password") {
    input.attr("type", "text");
  } else {
    input.attr("type", "password");
  }
});

</script>
</html>